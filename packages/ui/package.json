{
  "name": "@jsv-pc/ui",
  "license": "MIT",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./dist/lib/*.mjs"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.vue"
    },
    "./components/button": {
      "types": "./dist/components/button/index.d.ts",
      "default": "./dist/components/button/index.mjs"
    },
    "./components/avatar": {
      "types": "./dist/components/avatar/index.d.ts",
      "default": "./dist/components/avatar/index.mjs"
    }
  },
  "scripts": {
    "build": "pnpm unbuild",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "pnpm unbuild",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "postui-add": "prettier src --write --list-different",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn-vue@2.0.0 add"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "catalog:",
    "lucide-vue-next": "catalog:",
    "tailwind-merge": "catalog:",
    "tw-animate-css": "^1.2.5",
    "reka-ui": "catalog:"
  },
  "devDependencies": {
    "@jsv-pc/eslint-config": "workspace:*",
    "@jsv-pc/prettier-config": "workspace:*",
    "@jsv-pc/tailwind-config": "workspace:*",
    "@jsv-pc/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:"
  },
  "peerDependencies": {
    "vue": "^3.5.13"
  },
  "prettier": "@jsv-pc/prettier-config"
}
